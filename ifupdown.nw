<<[[getopt]] possibilities>>=
case 1:
	run_mappings = 0;
	break;
@ 
<<[[getopt]] possibilities>>=
case 4:
	run_scripts = 0;
	break;
@ 
<<[[getopt]] possibilities>>=
case 2:
        if (<<we're listing known interfaces>> || <<we're querying an interface's config>>)
		usage(argv[0]);
	force = 1;
	break;
