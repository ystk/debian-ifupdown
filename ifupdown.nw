	while (nextline && match($line, "", "$indent  ")) {
		my $foo = $line;
		$foo =~ s/^\s+//;
		$foo =~ m/^\s*(\S+)\s+(\([^)]+\)|\S+)\s*(\S+)?\s*$/;
