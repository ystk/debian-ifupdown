<<[[getopt]] possibilities>>=
case 'X':
	/* */
	excludeints++;
	excludeint = realloc(excludeint, excludeints * sizeof(char *));
	if (excludeint == NULL) {
		char * filename = argv[0];
		<<report internal error and die>>
	}
	excludeint[excludeints - 1] = strdup(optarg);
